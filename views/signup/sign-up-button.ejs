<!-- 에러 메시지 및 버튼 -->
<div id="signup_button" class="flex w-full justify-between items-center">
	<div>
		<% if (errorMessage) { %>
		<label class="text-red-600 text-sm font-bold"><%= errorMessage %></label>
		<% } %>
	</div>
	<button
		class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
		type="submit"
	>
		Sign Up
	</button>
</div>
